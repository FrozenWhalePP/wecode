<view class="test">
  <image class="test-img" src="../../images/login_hello.png" mode="widthFix"></image>
</view>
<view class='container'>
<!-- pages/getinto.wxml -->

  <!-- <view class="login-icon">
  <image class='login-img' src='../../images/login2.jpg' mode="widthFix"></image>
  </view> -->
  <view class='login-from'>
    <view class="inputView">
        <image class='namelmage' src='../../images/username.png'></image>
        <label class='loginLab'>用户名</label>
        <input class='inputText' bindinput='inputName' placeholder='请输入用户名' name='username' type='text'/>
      <view class='line'></view>
      <view class="inputView">
        <image class='keylmage' src='../../images/pw2.png'></image>
        <label class='loginLab'>密码</label>
        <input class='inputText'password="true" bindinput='inputPwd' placeholder='请输入密码' name='passwd'/>
      </view>
    </view>
    <view class="login">
      <button class='loginbtn' type='primary ' size='{{primarysize }}'loading='{{loading}}' plain="{{plain}}"bindtap="log">登录</button>
      <view class='info'>{{result}}</view>
    </view>
  </view>
</view>
